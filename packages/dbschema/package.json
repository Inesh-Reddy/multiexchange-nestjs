{
  "name": "@repo/dbschema",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "migration:generate": "pnpm typeorm-ts-node-commonjs migration:generate src/migrations/Init -d src/config/data-source.ts",
    "migration:create": "pnpm typeorm-ts-node-commonjs migration:create src/migrations/NewMigration",
    "migration:run": "pnpm typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
    "migration:revert": "pnpm typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
    "migration:show": "pnpm typeorm-ts-node-commonjs migration:show -d src/config/data-source.ts"
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "typeorm": "^0.3.26",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.1"
  }
}
